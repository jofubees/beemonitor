@model Beemonitor.Models.Apiary



@{
    ViewBag.Title = "Amend Create Apiary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Amend Create Apiary</h2>

@using (Html.BeginForm("Save", "Apiaries"))
{
    @Html.ValidationSummary(true, "please fix the following errors...")
    <div class="form-group">
        @Html.LabelFor(m => m.ApiaryName)
        @Html.TextBoxFor(m => m.ApiaryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.ApiaryName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Postcode)
        @Html.TextBoxFor(m => m.Postcode, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Postcode)
    </div>

    @Html.HiddenFor(m=> m.ApiaryId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
    
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}